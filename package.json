{
    "name": "simple-animation-js",
    "version": "1.0.1",
    "description": "Simple animation library which uses CSS transitions in the background and allows animating dimension percentages.",
    "main": "dist/simpleAnimation.min.js",
    "license": "MIT",
    "author": "Raphael HÃ¤ttich / Competec Service AG",
    "private": false,
    "scripts": {
        "lint": "eslint src/**/*.js",
        "lint-fix": "eslint --fix src/**/*.js",
        "test": "mocha test/**/*.spec.js",
        "coverage": "nyc --reporter=html --reporter=text --reporter=json mocha test/**/*.spec.js",
        "check-coverage": "istanbul-threshold-exit-code coverage/coverage-final.json --global 100",
        "build-prod": "google-closure-compiler --js=src/simpleAnimation.js --js_output_file=dist/simpleAnimation.min.js --assume_function_wrapper --define='INCLUDE_DEBUG=false'",
        "build-debug": "google-closure-compiler --js=src/simpleAnimation.js --js_output_file=dist/simpleAnimation.debug.js --assume_function_wrapper --define='INCLUDE_DEBUG=true'",
        "build": "npm run build-prod && npm run build-debug",
        "create-documentation": "jsdoc --configure jsdoc.json --verbose",
        "pre-commit": "npm run lint && npm run coverage && npm run check-coverage && npm run build && npm run create-documentation"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "docdash": "^1.0.0",
        "eslint": "^5.7.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.14.0",
        "fs": "0.0.1-security",
        "google-closure-compiler": "^20181008.0.0",
        "istanbul-threshold-exit-code": "^1.0.3",
        "jsdoc": "^3.5.5",
        "jsdom": "^12.2.0",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "sinon": "^6.3.5",
        "sinon-chai": "^3.2.0"
    }
}
